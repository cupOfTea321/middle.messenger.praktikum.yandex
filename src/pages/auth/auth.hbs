<main class="auth">
    {{#Form onSubmit=form.onSubmit ref="form"}}
        {{#each fields}}

                    {{{Field
                            onChange=this.onChange
                            onFocusIn=this.onFocusIn
                            onFocusOut=this.onFocusOut
                            class=../class
                            name=this.name
                            label=this.label
                            ref=this.ref
                    }}}
        {{/each}}
            {{{Button
                    onClick=this.onSubmit
                    class="first-button"
                    ref="submitBtn"
                    label="Авторизоваться"
                    type="submit"
            }}}
            {{{Link
                    class="second-button"
                    ref="signUp"
                    label="Нет аккаунта?"
                    type="button"
                    to="/sign-up"
            }}}
    {{/Form}}
</main>
