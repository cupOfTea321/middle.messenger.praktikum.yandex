<main class="login">
    <form class="form" id="reg__form">
        <h1>
            Регистрация
        </h1>
        {{#each fields}}

            {{{Field
                    error=this.error
                    onChange=this.onChange
                    onFocusIn=this.onFocusIn
                    onFocusOut=this.onFocusOut
                    class=../class
                    label=this.label
                    ref=this.ref
            }}}
        {{/each}}

        {{{Button
                onClick=this.onSubmit
                class="first-button"
                ref="submitReg"
                label="Зарегистрироваться"
                type="submit"
                to="/messenger"
        }}}
        {{{Link
                class="second-button"
                ref="signUp"
                label="Войти"
                type="button"
                to="/"
        }}}

    </form>

</main>
